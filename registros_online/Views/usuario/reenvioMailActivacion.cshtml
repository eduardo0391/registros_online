@model registros_online.Models.FormatEmailViewModel
@{
    Layout = "~/Views/usuario/_LayoutUsuario.cshtml";
}

@using (Html.BeginForm("enviarMailActivacion", "usuario", FormMethod.Post, new { id = "frmUsuario", vemail = Model }))
{
    <form role="form">
        <br>
        <div class="form-group input-group">
            Ingrese su dirección de correo electrónico
        </div>
        <br>
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            @Html.TextBoxFor(x => x.email, new { @class = "form-control", @maxlength = 40, @placeholder = "Ingrese su email", id = "email", name = "email" })
        </div>

        <div class="text-right">

            <button type="submit" class="btn btn-primary text-right">
                Enviar
            </button>
            <br />

        </div>
        @Html.ValidationSummary(false, "", new { style = "margin-top: 15px;", @class = "text-danger text-left" })
        <hr>
    </form>

}
