@model registros_online.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/usuario/_LayoutUsuario.cshtml";
}

@using (Html.BeginForm("actualizar", "usuario", FormMethod.Post, new { id = "frmUsuario" }))
{
    <br>
    @Html.HiddenFor(x => x.ResetCode, Model.ResetCode);
    <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        @Html.TextBoxFor(x => Model.NewPassword, new { @class = "form-control", @maxlength = 40, @placeholder = "Ingrese su nueva clave", type = "password", id = "newPassword", name = "newPassword" })
    </div>

        <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            @Html.TextBoxFor(x => Model.ConfirmPassword, new { @class = "form-control", @maxlength = 40, @placeholder = "Repita su clave", type = "password", id = "confirmPassword", name = "confirmPassword" })
        </div>
        <div class="text-right">

            <button type="submit" class="btn btn-primary text-right">
                Confirmar
            </button>
            <br />

        </div>
        @Html.ValidationSummary(false, "", new { style = "margin-top: 15px;", @class = "text-danger text-left" })
        <hr>
}

