<div class="panel panel-default">
    <div class="panel-heading">
        Contraseña
    </div>
    <div class="panel-body">

        @using (Ajax.BeginForm("actualizarPassword", "home",
                                        new AjaxOptions
                                        {
                                            HttpMethod = "POST",
                                            InsertionMode = InsertionMode.Replace,
                                            OnSuccess = "actualizarPassword"
                                        }))
        {
            <br>
            <div class="form-group">
                <label>Contraseña Actual:</label>
                <input type="password" name="Password" maxlength=40 class="form-control" placeholder="Ingrese su contraseña actual" />
            </div>
                        <div class="form-group">
                            <label>Nueva Contraseña:</label>

                            <input type="password" name="NewPassword" maxlength=40 class="form-control" placeholder="Ingrese su nueva contraseña" />

                        </div>
                        <div class="form-group">
                            <label>Repita su nueva contraseña:</label>
                            <input type="password" name="ConfirmPassword" maxlength=40 class="form-control" placeholder="Ingrese su nueva contraseña" />
                        </div>


                        <div class="text-right">

                            <button type="submit" class="btn btn-primary text-right">
                                Guardar
                            </button>
                            <br />
                            @Html.ValidationSummary(false, "", new { style = "margin-top: 15px;", @class = "text-danger text-left", id = "divPasswordError" })
                        </div>
                        <p class="bg-success text-center hidden" id="divPasswordTarget">Clave actualizada correctamente</p>


        }
    </div>
</div>
