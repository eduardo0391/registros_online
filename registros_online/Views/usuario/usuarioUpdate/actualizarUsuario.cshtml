@model registros_online.Models.UpdateUserViewModel


    <div class="panel panel-default">

        <div class="panel-heading">
            Datos personales
        </div>
        <div class="panel-body">

            @using (Ajax.BeginForm("actualizarUsuario", "Usuario",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    OnSuccess = "actualizarUsuario",
                    OnFailure = "alert('ocurrió un error inesperado');location.reload();"

                }))
            {
                <br>
                <div class="form-group">
                    <label>Nombre:</label>
                    @Html.TextBoxFor(x => Model.nombre, new { @class = "form-control", @maxlength = 40, @placeholder = "Nombre", id = "nombre", name = "nombre" })
                </div>

                <div class="form-group">
                    <label>Usuario:</label>
                    @Html.TextBoxFor(x => Model.user, new { @class = "form-control", @maxlength = 40, @placeholder = "Usuario", id = "user", name = "user" })
                </div>

                    <div class="form-group">
                        <label>Email:</label>
                        @Html.TextBoxFor(x => Model.email, new { @class = "form-control", @maxlength = 50, @placeholder = "Email", @text = "Model.email", @data_ng_model = "email" })
                    </div>

                    <div class="text-right">
                        <button type="submit" onclick="limpiarAvisos()" class="btn btn-primary text-right">
                            Guardar
                        </button>
                        <br />
                        @Html.ValidationSummary(false, "", new { style = "margin-top: 15px;", @class = "text-danger text-left", id = "divError" })

                    </div>
                        <p class="bg-success text-center hidden" id="divTarget">Usuario actualizado correctamente</p>

            }

        </div>


    </div>
