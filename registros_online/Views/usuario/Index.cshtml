@model registros_online.Models.LoginViewModel
@{
                /**/

                Layout = "~/Views/usuario/_LayoutUsuario.cshtml";
}


@using (Html.BeginForm("Index", "usuario", FormMethod.Post, new { id = "frmUsuario", vuser = Model }))
{
    @Html.AntiForgeryToken()
    <br>
    <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-tag"></i></span>
        @Html.TextBoxFor(x => Model.user, new { @class = "form-control", @placeholder = "Usuario o Email" })
    </div>
    <div class="form-group input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        @Html.PasswordFor(x => Model.pass, new { @class = "form-control", @placeholder = "Contraseña" })
    </div>


    <div class="text-right">
        <button type="submit" class="btn btn-primary text-right">
            Ingresar
        </button>

        @Html.ValidationSummary(false, "", new { style = "margin-top: 15px;", id = "error", @class = "text-danger text-left" })
    </div>
    <div class="form-group text-right">
        <label class="checkbox-inline">
            <a href="/usuario/recuperarUsuario">Olvidó la contraseña ? </a>
        </label>
        <label class="checkbox-inline">
            <a href="/usuario/reenvioMailActivacion">Reenviar correo de activación</a>
        </label>
    </div>
    <hr>
    @Html.ActionLink("Crear una cuenta", "Registrar", "usuario", routeValues: null, htmlAttributes: new { @class = "text-center", style = "" })
}