
@model registros_online.Models.UserViewModel
@{
    Layout = "~/Views/usuario/_LayoutUsuario.cshtml";
}

@using (Html.BeginForm("nuevoUsuario", "usuario", FormMethod.Post, new { id = "frmUsuario", vuser = Model }))
        {
                        <form role="form">
                            <br>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-circle-o-notch"></i></span>
                                @Html.TextBoxFor(x => Model.name, new { @class = "form-control", @maxlength =40,  @placeholder = "Nombre", id = "nombre",  name = "nombre" })
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                                @Html.TextBoxFor(x => Model.user, new { @class = "form-control", @maxlength = 40, @placeholder = "Usuario", id = "user", name = "user" })
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon">@@</span>
                                @Html.TextBoxFor(x => Model.email, new { @class = "form-control", @maxlength = 50, @placeholder = "Email" })
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                @Html.TextBoxFor(x => Model.password, new { @class = "form-control", @maxlength = 40, @placeholder = "Contraseña", Type = "password" })
                            
                            </div>
                            <div class="form-group input-group">
                                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                @Html.TextBoxFor(x => Model.confirmPassword, new { @class = "form-control", @maxlength = 40, @placeholder = "Repita la contraseña", Type = "password" })
                            </div>

                            <div class="text-right">

                                <button type="submit" class="btn btn-primary text-right">
                                    Registrarme
                                </button>
                                <br />
                                @Html.ValidationSummary(false, "", new {style= "margin-top: 15px;", @class = "text-danger text-left" })
                             
                            </div>
                           
                          <hr>
                               Ya estas registrado?  <a href="Index">Inicie sesión aquí</a>
                        </form>

}
