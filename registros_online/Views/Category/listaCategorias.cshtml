<form class="form-horizontal">
    <div class="form-group col-sm-10">
        <label for="name" class="col-sm-2 control-label">Título</label>
        <div class="col-sm-10">
            <input class="form-control" ng-model="categoriaNueva.descripcion" id="name" placeholder="Ingrese la nueva categoría">
        </div>
    </div>

    <div class="btn-group col-sm-2">
        <button type="button" class="btn btn-primary btn" ng-click="guardarCategoria()"><i class="glyphicon glyphicon glyphicon-ok"></i>Agregar</button>
    </div>
</form>

<table id="tabla" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Categoría</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="categoria in categorias track by $index" ng-include="getTemplate(categoria)"></tr>
    </tbody>
</table>
<script type="text/ng-template" id="display">
    <td>{{categoria.descripcion}}</td>

    <td style="width:40px !important;">
        <p class="botones" title="Edit">
            <button class="btn btn-primary btn-xs" ng-click="editarCategoria(categoria)">
                <span class="glyphicon glyphicon-pencil"></span>
            </button>
        </p>
    </td>
    <td style="width:40px !important;">

        <p data-placement="top" data-toggle="tooltip" class="botones" title="Delete">
            <button class="btn btn-danger btn-xs" data-title="Delete" ng-click="seleccionarCategoria(categoria)" data-toggle="modal" data-target="#eliminarCategoria">
                <span class="glyphicon glyphicon-trash"></span>
            </button>
        </p>


    </td>

</script>
<script type="text/ng-template" id="edit">
    <td><input type="text" ng-model="categorias.itemSeleccionado.descripcion" /></td>
    <td>

        <button class="btn btn-primary" ng-click="guardarCategoria(categorias.itemSeleccionado)">Guardar</button>
        <button class="btn btn-danger" ng-click="reset()">Cancelar</button>
    </td>
</script>

<button id="openModalMessageCategory" class="hidden" data-toggle="modal" data-target="#messageCategory">abrir category message</button>




